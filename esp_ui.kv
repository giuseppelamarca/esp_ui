#:kivy 2.0

<Esp_ui>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, .8
            orientation: 'horizontal'
            BoxLayout:
                size_hint: .3, 1
                orientation: 'vertical'
                Spinner:
                    id: gpio_16
                    text: ''
                    values: 'GPIO16', 'WAKE'
                Spinner:
                    id: gpio_5
                    text: ''
                    values: 'GPIO5', 'SCL'
                Spinner:
                    id: gpio_4
                    text: ''
                    values: 'GPIO4', 'SDA'

            Image:
                size_hint: .4, 1
                source: 'images/esp8266.jpeg'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: .3, 1
                BoxLayout:
                    orientation: 'vertical'
                    Spinner:
                        size_hint: 1, .05
                        id: gpio_16
                        text: ''
                        values: '', 'GPIO_NUM_16', 'WAKE'
                        on_text: root.pin(16, self.text)
                    Spinner:
                        size_hint: 1, .05
                        id: gpio_5
                        text: ''
                        values: '', 'GPIO_NUM_5', 'SCL'
                        on_text: root.pin(5, self.text)

                    Spinner:
                        size_hint: 1, .05
                        id: gpio_4
                        text: ''
                        values: '', 'GPIO_NUM_4', 'SDA'
                        on_text: root.pin(4, self.text)
                    Spinner:
                        id: gpio_0
                        size_hint: 1, .05
                        text: ''
                        values: '', 'GPIO_NUM_0', 'FLASH'
                        on_text: root.pin(0, self.text)
                    Spinner:
                        id: gpio_2
                        size_hint: 1, .05
                        text: ''
                        values: '', 'GPIO_NUM_2', 'TXD1'
                        on_text: root.pin(2, self.text)
                    Spinner:
                        size_hint: 1, .05
                        text: '3.3V'
                    Spinner:
                        size_hint: 1, .05
                        text: 'GND'
                    Spinner:
                        id: gpio_14
                        size_hint: 1, .05
                        text: ''
                        values: '', 'GPIO_NUM_14', 'SCLK'
                        on_text: root.pin(14, self.text)
                    Spinner:
                        id: gpio_12
                        size_hint: 1, .05
                        text: ''
                        values: '', 'GPIO_NUM_12', 'MISO'
                        on_text: root.pin(12, self.text)
                    Spinner:
                        id: gpio_13
                        size_hint: 1, .05
                        text: ''
                        values: '', 'GPIO_NUM_13', 'MOSI', 'RXD2'
                        on_text: root.pin(13, self.text)
                    Spinner:
                        id: gpio_15
                        size_hint: 1, .05
                        text: ''
                        values: '', 'GPIO_NUM_15', 'CS', 'TXD2'
                        on_text: root.pin(15, self.text)
                    Spinner:
                        id: gpio_3
                        size_hint: 1, .05
                        text: ''
                        values: '', 'GPIO_NUM_3', 'RXD0'
                        on_text: root.pin(3, self.text)
                    Spinner:
                        id: gpio_1
                        size_hint: 1, .05
                        text: ''
                        values: '', 'GPIO_NUM_1', 'TXD0'
                        on_text: root.pin(1, self.text)


                BoxLayout:
                    orientation: 'vertical'
                    Spinner:
                        id: gpio_16_mode
                        text: ''
                        values: '', 'GPIO_MODE_INPUT', 'GPIO_MODE_OUTPUT', 'GPIO_INTR_POSEDGE', 'GPIO_INTR_NEGEDGE', 'GPIO_INTR_ANYEDGE'
                        on_text: root.pin_mode(16, self.text)
                    Spinner:
                        id: gpio_5_mode
                        text: ''
                        values: '', 'GPIO_MODE_INPUT', 'GPIO_MODE_OUTPUT', 'GPIO_INTR_POSEDGE', 'GPIO_INTR_NEGEDGE', 'GPIO_INTR_ANYEDGE'
                        on_text: root.pin_mode(5, self.text)
                    Spinner:
                        id: gpio_4_mode
                        text: ''
                        values: '', 'GPIO_MODE_INPUT', 'GPIO_MODE_OUTPUT', 'GPIO_INTR_POSEDGE', 'GPIO_INTR_NEGEDGE', 'GPIO_INTR_ANYEDGE'
                        on_text: root.pin_mode(4, self.text)
                    Spinner:
                        id: gpio_0_mode
                        text: ''
                        values: '', 'GPIO_MODE_INPUT', 'GPIO_MODE_OUTPUT', 'GPIO_INTR_POSEDGE', 'GPIO_INTR_NEGEDGE', 'GPIO_INTR_ANYEDGE'
                        on_text: root.pin_mode(0, self.text)
                    Spinner:
                        id: gpio_2_mode
                        text: ''
                        values: '', 'GPIO_MODE_INPUT', 'GPIO_MODE_OUTPUT', 'GPIO_INTR_POSEDGE', 'GPIO_INTR_NEGEDGE', 'GPIO_INTR_ANYEDGE'
                        on_text: root.pin_mode(2, self.text)
                    Spinner:
                        text: '3.3V'
                    Spinner:
                        text: 'GND'
                    Spinner:
                        id: gpio_14_mode
                        text: ''
                        values: '', 'GPIO_MODE_INPUT', 'GPIO_MODE_OUTPUT', 'GPIO_INTR_POSEDGE', 'GPIO_INTR_NEGEDGE', 'GPIO_INTR_ANYEDGE'
                        on_text: root.pin_mode(14, self.text)
                    Spinner:
                        id: gpio_12_mode
                        text: ''
                        values: '', 'GPIO_MODE_INPUT', 'GPIO_MODE_OUTPUT', 'GPIO_INTR_POSEDGE', 'GPIO_INTR_NEGEDGE', 'GPIO_INTR_ANYEDGE'
                        on_text: root.pin_mode(12, self.text)
                    Spinner:
                        id: gpio_13_mode
                        text: ''
                        values: '', 'GPIO_MODE_INPUT', 'GPIO_MODE_OUTPUT', 'GPIO_INTR_POSEDGE', 'GPIO_INTR_NEGEDGE', 'GPIO_INTR_ANYEDGE'
                        on_text: root.pin_mode(13, self.text)
                    Spinner:
                        id: gpio_15_mode
                        text: ''
                        values: '', 'GPIO_MODE_INPUT', 'GPIO_MODE_OUTPUT', 'GPIO_INTR_POSEDGE', 'GPIO_INTR_NEGEDGE', 'GPIO_INTR_ANYEDGE'
                        on_text: root.pin_mode(15, self.text)
                    Spinner:
                        id: gpio_3_mode
                        text: ''
                        values: '', 'GPIO_MODE_INPUT', 'GPIO_MODE_OUTPUT', 'GPIO_INTR_POSEDGE', 'GPIO_INTR_NEGEDGE', 'GPIO_INTR_ANYEDGE'
                        on_text: root.pin_mode(3, self.text)
                    Spinner:
                        id: gpio_1_mode
                        text: ''
                        values: '', 'GPIO_MODE_INPUT', 'GPIO_MODE_OUTPUT', 'GPIO_INTR_POSEDGE', 'GPIO_INTR_NEGEDGE', 'GPIO_INTR_ANYEDGE'
                        on_text: root.pin_mode(1, self.text)

        BoxLayout:
            size_hint: 1, .2
            Button:
                text: "Generate"
                on_press: root.generate()



